{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"next-file-manager/server": ["../src/server"],
			"next-file-manager/client": ["../src/client"],
			"next-file-manager/types": ["../src/types"],
			"@/server/*": ["../src/server/*"],
			"@/client/*": ["../src/client/*"],
			"@/types/*": ["../src/types/*"],
			"mongoose": ["../node_modules/mongoose"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/dev/types/**/*.ts", "**/*.mts"],
	"exclude": ["node_modules"]
}
